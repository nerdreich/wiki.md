  "license": "AGPL-3.0-or-later",
  "scripts": {
    "dist": "gulp dist",
    "package": "npm-run-all lint gulp:package",
    "gulp": "gulp",
    "gulp:package": "gulp package",
    "lint": "npm-run-all lint:prettier lint:stylelint lint:eslint lint:phpcbf lint:phpcs",
    "lint:eslint": "eslint --ext .js,.mjs .",
    "lint:phpcbf": "tools/phpcbf.phar --standard=PSR12 --extensions=php --ignore=*/core/lib/* src/",
    "lint:phpcs": "tools/phpcs.phar --standard=PSR12 --extensions=php --ignore=*/core/lib/* src/",
    "lint:prettier": "prettier -w 'src/**/*.scss'",
    "lint:stylelint": "stylelint --fix 'src/**/*.scss'",
    "test:unit": "tools/phpunit-9.phar test/unit",
    "test:integration:74": "IT_HOST=wiki74.localhost tools/phpunit-9.phar test/integration",
    "test:integration:80": "IT_HOST=wiki80.localhost tools/phpunit-9.phar test/integration",
    "test:integration:81": "IT_HOST=wiki81.localhost tools/phpunit-9.phar test/integration",
    "test:integration:82": "IT_HOST=wiki82.localhost tools/phpunit-9.phar test/integration",
    "test:integration:83": "IT_HOST=wiki83.localhost tools/phpunit-9.phar test/integration"
  },
  "devDependencies": {
    "del": "^7.1.0",
