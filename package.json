    "prettier": "^3.2.4",
    "sass": "^1.70.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-sass-guidelines": "^11.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.1.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
